<launch>
  <arg name="start_perception" default="false"/>

  <rosparam command="load" param="/camera" file="$(find poli2_launch)/config/camera_params.yaml"/>

  <!-- Bring up realsense camera-->
  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch"/>

  <!-- Tell the realsense driver where it is -->
  <node pkg="tf" type="static_transform_publisher" name="camera_to_realsense_link"
    args="-0.03 0.035 -0.01 1.57 0 1.57 camera_placement_link camera_link 100" /> 

  <group if="$(arg start_perception)">
    <include file="$(find poli2_launch)/launch/perception.launch">
    </include>
  </group>

  <group if="$(eval robot_name=='beep' or robot_name=='boop')">
    <!-- Start LED driver and pan/tilt zero switch manager-->
    <include file="$(find poli2_launch)/launch/torso/led_controller.launch"/>
  </group>
  
</launch>
